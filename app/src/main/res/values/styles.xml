<resources xmlns:tools="http://schemas.android.com/tools" >

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorError">@color/colorError</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:fontFamily">@font/yekan_mobile_regular</item>
        <item name="ms_stepperStyle">@style/MSDefaultStepperLayoutTheme</item>
        <item name="coordinatorLayoutStyle">@style/coordinatorLayoutStyle</item>
        <item name="cardViewStyle">@style/cardViewStyle</item>
        <item name="android:navigationBarColor">@color/colorPrimary</item>
        <item name="verificationCodeStyle">@style/verificationCodeStyle</item>
        <item name="android:popupMenuStyle">@style/PopupMenu</item>
    </style>

    <style name="LoginTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorError">@color/colorError</item>
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">true</item>
        <item name="android:popupBackground">@drawable/shape_popup</item>
        <item name="android:fontFamily">@font/yekan_mobile_regular</item>
        <item name="coordinatorLayoutStyle">@style/coordinatorLayoutStyle</item>
        <item name="cardViewStyle">@style/cardViewStyle</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:navigationBarColor">@color/colorPrimary</item>
        <item name="android:windowActivityTransitions">true</item>
        <item name="ms_stepperStyle">@style/MSDefaultStepperLayoutTheme</item>
        <item name="verificationCodeStyle">@style/verificationCodeStyle</item>
        <item name="android:popupMenuStyle">@style/PopupMenu</item>
    </style>

    <style name="AppThemeDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="fontFamily">@font/yekan_mobile_regular</item>
        <item name="android:navigationBarColor">@color/colorPrimary</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="dialogCornerRadius">8dp</item>
    </style>

    <style name="SDefaultStepperLayoutTheme">
        <item name="ms_tabsContainerStyle">@style/MSStepTabsContainer</item>
        <item name="ms_bottomNavigationStyle">@style/SBottomNavigation</item>
        <item name="ms_backNavigationButtonStyle">@style/Back</item>
        <item name="ms_nextNavigationButtonStyle">@style/Next</item>
        <item name="ms_completeNavigationButtonStyle">@style/Complete</item>
        <item name="ms_colorableProgressBarStyle">@style/MSColorableProgressBar</item>
        <item name="ms_stepPagerProgressBarStyle">@style/MSStepPagerProgressBarStyle</item>
        <item name="ms_stepPagerOverlayStyle">@style/MSStepPagerOverlayStyle</item>
        <item name="ms_stepTabsScrollViewStyle">@style/MSStepTabsScrollView</item>
        <item name="ms_stepTabsInnerContainerStyle">@style/MSStepTabsInnerContainer</item>
        <item name="ms_stepTabContainerStyle">@style/SStepTabContainer</item>
        <item name="ms_stepTabNumberStyle">@style/MSStepTabNumber</item>
        <item name="ms_stepTabDoneIndicatorStyle">@style/MSStepTabDoneIndicator</item>
        <item name="ms_stepTabIconBackgroundStyle">@style/MSStepTabIconBackground</item>
        <item name="ms_stepTabTitleStyle">@style/SStepTabTitle</item>
        <item name="ms_stepTabSubtitleStyle">@style/SStepTabSubtitle</item>
        <item name="ms_stepTabDividerStyle">@style/MSStepTabDivider</item>
        <item name="ms_stepTabsProgressMessageStyle">@style/MSStepTabsProgressMessage</item>
    </style>

    <style name="SStepTabContainer">
        <item name="android:layout_height">@dimen/ms_step_tab_height</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Back">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">left|start|center_vertical</item>
        <item name="android:background">#00000000</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Complete">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">right|end|center_vertical</item>
        <item name="android:background">#00000000</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Next">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">right|end|center_vertical</item>
        <item name="android:background">#00000000</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="SStepTabTitle">
        <item name="android:layout_marginLeft">@dimen/ms_step_tab_text_lateral_padding</item>
        <item name="android:layout_marginStart">@dimen/ms_step_tab_text_lateral_padding</item>
        <item name="android:textColor">@color/ms_black</item><!-- Text alpha is changed in StepTab. 87% for active and 38% for inactive-->
        <item name="android:textSize">@dimen/ms_step_tab_title_font_size</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:gravity">end</item>
    </style>

    <style name="SStepTabSubtitle">
        <item name="android:layout_marginLeft">@dimen/ms_step_tab_text_lateral_padding</item>
        <item name="android:layout_marginStart">@dimen/ms_step_tab_text_lateral_padding</item>
        <item name="android:textColor">#80000000</item>
        <item name="android:textSize">@dimen/ms_step_tab_subtitle_font_size</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:gravity">end</item>
    </style>

    <style name="SBottomNavigation">
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">@color/ms_bottomNavigationBackgroundColor</item>
        <item name="android:elevation">16dp</item>
    </style>

    <style name="verificationCodeStyle" parent="Widget.AppCompat.EditText">
        <item name="android:background">@null</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="PopupMenu" parent="@android:style/Widget.PopupMenu">
        <item name="android:popupBackground">@drawable/shape_popup</item>
        <item name="android:popupElevation" tools:ignore="NewApi">4dp</item>
    </style>

    <style name="coordinatorLayoutStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:background">@color/gray200</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="cardViewStyle" parent="CardView.Light">
        <item name="cardBackgroundColor">@color/colorWhite</item>
        <item name="cardCornerRadius">4dp</item>
        <item name="cardElevation">2dp</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextStyleDialog" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="toolbarStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="noBackground" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Clickable" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:clickable">true</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:theme">@style/styleRippleBlackMe</item>
    </style>

    <style name="ClickableWhite" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:clickable">true</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:theme">@style/styleRippleWhiteMe</item>
    </style>

    <style name="ClickableCircle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:clickable">true</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:theme">@style/styleRipplePrimary</item>
    </style>

    <style name="ClickableCircleWhite" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:theme">@style/styleRippleWhiteMe</item>
    </style>

    <style name="ClickableCircleBlack" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:clickable">true</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:theme">@style/styleRippleBlackMe</item>
    </style>

    <style name="styleRippleWhite" parent="Theme.AppCompat.NoActionBar" />

    <style name="styleRippleBlack" parent="Theme.AppCompat.Light.NoActionBar" />

    <style name="styleRipplePrimary" parent="Theme.AppCompat.NoActionBar">
        <item name="colorControlHighlight">@color/colorPrimary</item>
    </style>

    <style name="styleRippleWhiteMe" parent="Theme.AppCompat.NoActionBar">
        <item name="colorControlHighlight">@color/colorWhite</item>
    </style>

    <style name="styleRippleBlackMe" parent="Theme.AppCompat.NoActionBar">
        <item name="colorControlHighlight">#00a66d</item>
    </style>

</resources>