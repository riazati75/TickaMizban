<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:id="@+id/root"
    android:layout_height="match_parent"
    android:background="@color/colorBackground">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:elevation="2dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/back"
                android:onClick="back"
                android:tint="@color/colorWhite"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@drawable/icon_arrow_forward"
                android:padding="7dp"
                android:layout_marginEnd="5dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:contentDescription="@string/app_name" />

            <TextView
                android:layout_toStartOf="@+id/back"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:padding="5dp"
                android:text="افزودن اقامتگاه"
                android:textColor="@color/colorWhite"
                android:textSize="20sp" />

        </RelativeLayout>

    </android.support.v7.widget.Toolbar>

    <com.stepstone.stepper.StepperLayout
        android:id="@+id/stepperLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:chainUseRtl="true"
        app:ms_activeStepColor="@color/colorDone"
        app:ms_backButtonColor="@color/colorPrimary"
        app:ms_backButtonText="مرحله قبل"
        app:ms_bottomNavigationBackground="@color/colorWhite"
        app:ms_completeButtonColor="@color/colorPrimary"
        app:ms_completeButtonText="ثبت نهایی"
        app:ms_errorColor="@color/colorError"
        app:ms_inactiveStepColor="@color/gray400"
        app:ms_nextButtonColor="@color/colorPrimary"
        app:ms_nextButtonText="مرحله بعد"
        app:ms_showBackButtonOnFirstStep="false"
        app:ms_showBottomNavigation="true"
        app:ms_showErrorMessageEnabled="true"
        app:ms_showErrorState="true"
        app:ms_showErrorStateEnabled="true"
        app:ms_stepperFeedbackType="disabled_bottom_navigation"
        app:ms_stepperFeedback_contentFadeAlpha="0.8"
        app:ms_stepperLayoutTheme="@style/MSDefaultStepperLayoutTheme"
        app:ms_stepperType="tabs"
        app:ms_tabNavigationEnabled="true"
        app:ms_tabStepDividerWidth="?attr/actionBarSize" />

</LinearLayout>